<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="12dp">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dismiss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close_black_24dp" />
    </RelativeLayout>

    <TextView
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/latoregular"
        android:text="Rate this product"
        android:textColor="@color/dark_effect1"
        android:textSize="20dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fontFamily="@font/latoregular"
        android:text="We need your feedback!"
        android:textSize="12dp" />

    <RatingBar
        android:id="@+id/rating_bars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:numStars="5"
        android:progressTint="@color/color_yellow"
        android:secondaryProgressTint="#888888" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/latoregular"
        android:text="Write a review"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/edt_comment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:background="@drawable/button_design4"
        android:fontFamily="@font/latoregular"
        android:gravity="top|left"
        android:hint="@string/tell_others_what_you_think"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="100"
        android:minLines="2"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_post"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/rdi_group"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_design11"
        android:fontFamily="@font/latoregular"
        android:text="Post"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

</LinearLayout>