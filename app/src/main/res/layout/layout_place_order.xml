<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/allerrg"
        android:text="Checkout"
        android:textColor="@color/dark_background"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edt_edit_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latoregular"
        android:text="Edit Address"
        android:textAlignment="textEnd"
        android:textColor="@color/bt_text_blue"
        android:textSize="14sp"
        android:textStyle="normal" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <EditText
            android:id="@+id/edt_address"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:autofillHints=""
            android:fontFamily="@font/latoregular"
            android:hint="@string/adddress"
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:textSize="17sp" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txt_address_deetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/latoregular"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/address"
        android:textColor="@color/color_black"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/edt_txt_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:hint="@string/write_a_note"
            android:inputType="textPostalAddress"
            android:padding="10dp"
            android:textSize="17sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerrg"
        android:text="@string/select_delivery_method"
        android:textColor="@color/dark_effect"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdi_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/latoregular"
            android:text="@string/home_address"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdi_other_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:text="@string/work_place_address"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdi_ship_this_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:text="@string/current_location"
            android:textSize="16sp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerrg"
        android:text="@string/select_payment_method"
        android:textColor="@color/dark_effect"
        android:textSize="18sp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdi_cod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="@font/latoregular"
            android:text="@string/cash_on_delivery"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rdi_braintree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/latoregular"
            android:text="@string/visa_debit_card_paypal"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_design8"
        android:fontFamily="@font/allerrg"
        android:text="Pay"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/allerrg"
        android:text="Back"
        android:textColor="@color/bt_text_blue"
        android:textStyle="bold" />


</LinearLayout>