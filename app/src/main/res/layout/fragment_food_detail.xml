<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_effect"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_black"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax" />

        <View
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:background="@drawable/bottom_shadow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:background="#7C706E6E" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/allerrg"
                android:text="@string/food_name1"
                android:textAllCaps="false"
                android:textColor="@color/dark_sub_primary"
                android:textSize="24sp"
                android:textStyle="normal" />

            <RatingBar
                android:id="@+id/rating_Bar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:isIndicator="true"
                android:numStars="5" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/latoregular"
                    android:text="Rs"
                    android:textColor="@color/colorAccent1"
                    android:textSize="28sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/latoregular"
                    android:text="00.00"
                    android:textColor="@color/colorAccent1"
                    android:textSize="28sp"
                    android:textStyle="normal" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#00000000"
                    app:backGroundColor="#00000000"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textColor="@color/color_white"
                    app:textSize="7dp" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


    <Button
        android:id="@+id/add_to_cart"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="325dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_design4"
        android:fontFamily="@font/allerrg"
        android:text="Add To Cart"
        android:textColor="@color/color_black"
        android:textSize="17dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="420dp"
        android:layout_marginRight="8dp">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_design6"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/btnShowComment"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/allerrg"
                android:gravity="center"
                android:text="@string/see_reviews"
                android:textColor="#00BCD4"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:tint="@color/color_heart"
                android:src="@drawable/ic_favorite_black_24dp">

            </ImageView>


            <TextView
                android:id="@+id/btnRate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/allerrg"
                android:gravity="center"
                android:text="Feedback"
                android:textColor="#00BCD4"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:paddingBottom="3dp"
            android:id="@+id/count_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:fontFamily="@font/latolight"
            android:text="12"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="375dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="58dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/dark_background"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/latoregular"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/description1"
                android:textColor="@color/dark_sub_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_descryption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/latoregular"
                android:lineSpacingMultiplier="1.5"
                android:text="@string/description"
                android:textColor="@color/dark_sub_primary"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Extra Meals "
                    android:textColor="#222121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_add_addon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:padding="2dp"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:tint="@color/colorAccent" />

            </LinearLayout>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_user_selected_addon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:visibility="gone"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textSize="22sp" />

            <RadioGroup
                android:id="@+id/rdi_group_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"></RadioGroup>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>